{
  "compilerOptions": {
    "types": [
      "node",
      "vitest/globals"
    ],
    "declaration": true,
    "outDir": "./lib",
    "sourceMap": true,
    "inlineSources": true,
    "target": "ES6",
    "moduleResolution": "node",
    "module": "es2022",
    "strict": false,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules/*",
    "__sapper__/*",
    "public/*"
  ],
}
